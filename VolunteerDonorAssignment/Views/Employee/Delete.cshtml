@model VolunteerDonorAssignment.Models.Donor
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete Donor Info From Database</h1>

<form method="post" asp-action="DeletePost">
    <input asp-for="DonorId" hidden />
    <div class="border p-3">
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="PhoneNumber"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="FirstName" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="LastName" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="PhoneNumber" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Confirm" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



