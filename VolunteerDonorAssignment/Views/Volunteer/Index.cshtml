@model IEnumerable<VolunteerDonorAssignment.Models.Donor>
@{
    ViewData["Title"] = "Index";
}
@*<The Volunteer page should show data from the donor table after volunteers have been authenticated
<Volunteers should be able to submit temporary forms to update donor information that will be approved by employees*@

<h1>Welcome Volunteer!</h1>

<div class="container p-3"> 
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">Assigned Donor Contact Information</h2>
        </div>
        <div class="col-4 text-right">           
            <a asp-controller="Volunteer" asp-action="AdjustDonorInfo" class="btn btn-primary">Adjust Donor Information</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0) 
     {
        <table class="table table-bordered table striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Notes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var donor in Model)
                {
                    <tr>
                        <td width="20%">@donor.FirstName @donor.LastName</td>
                        <td width="30%">@donor.PhoneNumber</td>
                        <td width="50%">TODO: Retrive data from DonorNote table</td>
                    </tr>
                }
            </tbody>
        </table>      
     }
     else
     {
        <p>Donor Information Cannot Be Accessed</p>
     }
</div>
