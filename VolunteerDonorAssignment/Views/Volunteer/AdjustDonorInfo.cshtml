@model VolunteerDonorAssignment.Models.Donor 
@*This will change to create a new donor entry in a temporary database so that a staff member can approve of the changes before they are added to the database*@

@{
    ViewData["Title"] = "AdjustDonorInfo";
}

<h1>Adjust Donor Infomation</h1>

<form method="post" asp-action="AdjustDonorInfo">
    <div class="border p-3">
        @*<div class="form-group row">
            <h2 class="text-black-50 pl-3"> Update Donor Information</h2>
        </div>*@
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="FirstName"></label>
                        
                    </div>
                    <div class="col-2">
                        <label asp-for="LastName"></label>
                        
                    </div>
                    <div class="col-2">
                        <label asp-for="PhoneNumber"></label>
                    </div>
                    @*<div class="col-6">
                        <label asp-for="DonorNotes"></label>
                    </div>*@
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                    @*<div class="col-6">
                        <input asp-for="DonorNotes" class="form-control" />
                    </div>*@
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>